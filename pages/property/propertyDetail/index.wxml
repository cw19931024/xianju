<view class="property">
    <view class="view-swiper">
        <swiper class="swiper-lyout" indicator-dots="false" autoplay="true" interval="5000" duration="1000">
            <block wx:for="{{property.imgUrl}}">
                <swiper-item>
                    <image src="{{item.imgUrl}}" class="slide-image" width="355" height="150" />
                </swiper-item>
            </block>
        </swiper>
    </view>
    <view class="view-caontainer">
        <view class="property-title">
            {{property.title}}
        </view>
        <view class="property-info">
            <view class="estateInfo info-lyout">
                <view class="info-title">小区信息</view>
                {{property.city}}-{{property.district}}-{{property.estate.name}}
            </view>
            <view class="dateInfo info-lyout">
                <view class="info-title">
                    发布信息
                    <i class="fa chevron-right" aria-hidden="true"></i>
                </view>
                <view class="date-group" wx:for="{{property.dateTime}}">{{item.label}}：{{item.time}}</view>
            </view>
            <view class="labelInfo info-lyout">
                <view class="info-title">标签信息</view>
                <view class="label-group" wx:for="{{property.icon}}">{{item.label}}</view>
            </view>
        </view>
    </view>
    <view class="view-btn-group">
        <a href="javascript:;" class="btn">
            <view class="btn-icon">
                <i class="fa fa-heart" aria-hidden="true"></i>
            </view>
            收藏
        </a>
        <a href="javascript:;" class="btn">
            <view class="btn-icon">
                <i class="fa fa-share-square-o" aria-hidden="true"></i>
            </view>
            分享
        </a>
        <a href="javascript:;" class="btn">
            获取电话
        </a>
    </view>
</view>